<div class="page-header">
  <% if current_user.admin? %>
    <%= link_to cours_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Retour
    <% end %>

    <%= link_to(@cour, method: :delete, data:{confirm: 'Confirmez-vous la suppression définitive de ce cours ?'}, class:"btn btn-warning") do %>
      <span class="glyphicon glyphicon-remove"></span>
      Supprimer
    <% end %>

    <%= link_to edit_cour_path(@cour), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Modifier
    <% end %>
  <% end %>
  
  <h2>
    <%= l(@cour.debut, format: :long) %>
  </h2>
</div>

<h3>
  <%= @cour.formation.nom_promo_etudiants %><br>
  <%= @cour.nom %><br>
  <%= @cour.ue %>
</h3>
<br>

<p>
  <strong>Début:</strong>
  <%= l(@cour.debut, format: :long) %>
</p>

<p>
  <strong>Fin:</strong>
  <%= l(@cour.fin, format: :long) %>
</p>

<p>
  <strong>Durée:</strong>
  <%= @cour.duree %>h
</p>

<p>
  <strong>Intervenant:</strong>
  <%= link_to @cour.intervenant.nom_prenom, @cour.intervenant %>
</p>

<p>
  <strong>Formation:</strong>
  <%= link_to @cour.formation.nom_promo, @cour.formation %>
</p>

<p>
  <strong>Salle:</strong>
  <% if @cour.salle %>
    <%= @cour.salle.nom %>
    <% if @cour.manque_de_places? %>
      <i class="glyphicon glyphicon-warning-sign" 
          title="Salle trop petite. Manque <%= @cour.formation.nbr_etudiants - @cour.salle.places %> place(s)">
      </i>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Etat:</strong>
  <span class="label <%= @cour.style %>"><%= @cour.etat.humanize %></span>
</p>
<br>

<% if current_user.admin? %>
  <% if @cour.audits.any? %>
    <h3>Historique des modifications</h3>
    <table class="table">
      <% @cour.audits.reverse.each do |audit| %>
        <tr>
          <td><%= l(audit.created_at) %></td>
          <td><%= audit.user.email if audit.user %></td>
          <td><%= audit.action %></td>
          <td><%= audit.audited_changes %></td>
        </tr>  
      <% end %>
    </table>
  <% end %>
<% end %>