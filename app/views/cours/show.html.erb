<div class="page-header">
  <div class="btn-group pull-right">
    <%= link_to edit_cour_path(@cour), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Modifier
    <% end %>

    <% if current_user.admin? %>
      <%= link_to(@cour, method: :delete, data:{confirm: 'Confirmez-vous la suppression définitive de ce cours ?'}, class:"btn btn-warning") do %>
        <span class="glyphicon glyphicon-remove"></span>
        Supprimer
      <% end %>
    <% end %>

    <a href="#audit" data-toggle="collapse" class='btn btn-default'>
      <span class="glyphicon glyphicon-search"></span>
      Audit
    </a>

    <%= link_to cours_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Retour
    <% end %>
  </div>
  
  <h2>
    <%= l(@cour.debut, format: :long) %>
  </h2>
</div>

<h3>
  <%= @cour.formation.nom_promo %> -> 
  <%= @cour. nom_ou_ue %>
</h3>

<p>
  <strong>Fin:</strong>
  <%= l(@cour.fin, format: :long) %>
</p>

<p>
  <strong>Durée:</strong>
  <%= @cour.duree %>h
</p>

<p>
  <strong>Intervenant:</strong>
  <%= link_to @cour.intervenant.nom_prenom, @cour.intervenant %>
</p>

<p>
  <strong>Formation:</strong>
  <%= link_to @cour.formation.nom_promo, @cour.formation %>
</p>

<p>
  <strong>Salle:</strong>
  <% if @cour.salle %>
    <%= @cour.salle.nom %>
    <% if @cour.manque_de_places? %>
      <i class="glyphicon glyphicon-warning-sign" 
          title="Salle trop petite. Manque <%= @cour.formation.nbr_etudiants - @cour.salle.places %> place(s)">
      </i>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Etat:</strong>
  <span class="label <%= @cour.style %>"><%= @cour.etat.humanize %></span>
</p>
<br>

<div id="audit" class="collapse in">
  <% if @cour.audits.any? %>
    <h3>Audit des modifications</h3>
    <table class="table table-condensed">
      <thead>
        <th>Date</th>
        <th>Qui</th>
        <th>Action</th>
        <th>Modifications</th>
        <th>Salle</th>
      </thead>
      <% @cour.audits.includes(:user).reverse.each do |audit| %>
        <tr>
          <td><%= l(audit.created_at, format: :short) %></td>
          <td><%= audit.user.email if audit.user %></td>
          <td><%= audit.action %></td>
          <td><%= sanitize audit.pretty_changes %></td>
          <td><%= convertir_id_salles(audit) %></td>
        </tr>  
      <% end %>
    </table>
  <% end %>
</div>