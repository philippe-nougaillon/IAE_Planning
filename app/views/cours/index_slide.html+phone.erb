<script type="text/javascript">    
    setInterval(function() {
        window.location.reload();
    }, 1*60000); 
</script>

<div class="container-fluid">
  <h4>
    <button type="button" class="btn btn-default btn-sm">
      <%= link_to '<', cours_index_slide_path(planning_date:@planning_date - 1.day) %>
    </button>
    <%= l(@planning_date.to_date, format: :long) %>
    <button type="button" class="btn btn-default btn-sm">
      <%= link_to '>', cours_index_slide_path(planning_date:@planning_date + 1.day) %>
    </button>
  </h4>

  <% if @cours.any? %>
    <% @cours.includes(:formation, :intervenant, :salle).each do | cours | %>
      <hr>
      <h4>
        <%= l(cours.debut, format: :heures_min) %> -
        <%= l(cours.fin, format: :heures_min) %>
        <% if cours.salle %>
            <span class="label <%= cours.style %>">
              <%= cours.salle.nom %>
            </span>
        <% else %>
          <i class="glyphicon glyphicon-warning-sign"></i>
        <% end %>
      </h4>

      <b><%= cours.formation.nom_promo %></b>
      <%= cours.nom_ou_ue %><br>
      <%= cours.intervenant.nom_prenom %><br>
      
      <% if cours.progress_bar_pct(@planning_date) > 0 %>  
        <br>
        <div class="progress" style="width: 85%">
          <div class="progress-bar progress-bar-striped active" 
               role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="<%= cours.progress_bar_pct(@planning_date) %> " 
               style="width:<%= cours.progress_bar_pct(@planning_date) %>%">
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <hr>
</div>


