<%= form_for(@cour, html:{class:"form-horizontal"}) do |f| %>
  <% if @cour.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  
      <h3><%= t('activerecord.errors.template.header',
                  model: Cour.model_name.human, count: @cour.errors.count) %></h3>
     
      <ul>
      <% @cour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>

  <div class="form-group">
    <%= f.label :debut, "Début", class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.datetime_select :debut, minute_step:15, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Durée (h)", class:"control-label col-sm-2" %>
    <div class="col-sm-1">
      <%= select_tag :duree_cours, 
                        options_for_select(['0.5','1.0','1.5','2.0','2.5','3.0','3.5','4.0'], @cour.duree.to_s), 
                        include_blank:true, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :formation_id, class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.collection_select(:formation_id, Formation.all, :id, :nom_promo, {include_blank: true}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :intervenant_id, class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.collection_select(:intervenant_id, Intervenant.all, :id, :nom_prenom, {include_blank: true}) %>
    </div>
  </div>
  <div class="form-group lg-2">
    <%= f.label :ue, "UE", class:"control-label col-sm-2" %>
    <div class="col-sm-1">
      <%= f.text_field :ue, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nom, class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :nom, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :etat, class:"control-label col-sm-2" %>
    <div class="col-sm-2">
      <%= f.select(:etat, Cour.etats.keys.to_a, {include_blank: true}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :salle_id, class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.collection_select(:salle_id, Salle.all, :id, :nom_places, {include_blank: true}) %>
    </div>
  </div>
  <br>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enregistrer ce cours", class: "btn btn-primary" %>
      <% if @cour.new_record? %>
        <%= f.submit "Enregistrer ce cours et saisir le suivant", name: 'create_and_add', class:"btn btn-default" %>
      <% end %>
    </div>
  </div>

<% end %>
