<div class="simple-calendar">
  <% if @week_selector_visible %>
    <div class="calendar-heading">
      <%= link_to calendar.url_for_previous_view , class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-backward"></i>
      <% end %>
      <span class="calendar-title">Semaine <b><%= calendar.week_number %></b></span>
      <%= link_to calendar.url_for_next_view , class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-forward"></i>
      <% end %>
    </div>
  <% end %>

  <table class="table">
    <% if @week_selector_visible %>
      <% @week_selector_visible = false %>
      <thead>
        <tr>
          <td />
          <% date_range.slice(0, 7).each do |day| %>
            <% unless day.sunday? %>
              <th><%= t('date.abbr_day_names')[day.wday] %></th>
            <% end %>
          <% end %>
        </tr>
      </thead>
    <% end %>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% if defined? @week_selector_visible %>
            <td>
              <h2><%= @salle.nom %></h2>
            </td>
          <% end %>
          
          <% week.each do |day| %>
            <% unless day.sunday? %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                  <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
                <% else %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% end %>
            <% end %>  
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
