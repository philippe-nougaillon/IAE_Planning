<div class="page-header">
  <%= link_to new_fermeture_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Jour Fermeture
  <% end %>
  <h1>
    <span class="glyphicon glyphicon-lock"></span>
    Liste des jours de fermeture
  <h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @fermetures) do |fermeture| %>
        <td><%= l(fermeture.date) %></td>

        <td><%= l(fermeture.date, format: :long) %></td>
        <td><%= link_to 'Modifier', edit_fermeture_path(fermeture) %></td>
        <td><%= link_to '[X]', fermeture, method: :delete, data: { confirm: 'Etes-vous certain(e)?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @fermetures, renderer: BootstrapPagination::Rails %>
</div>
