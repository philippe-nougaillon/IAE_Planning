<div class="page-header">
  <h1>
    <span class="glyphicon glyphicon-inbox"></span>  
    Import logs
  </h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Etat</th>
        <th>Lignes</th>
        <th>Importées</th>
        <th>Message</th>
        <th>Fichier source</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @import_logs) do |import_log| %>
        <td><%= l(import_log.created_at.in_time_zone('Paris')) %></td>
        <td><%= import_log.model_type %></td>
        <td>
          <span class="<%= import_log.icon_etat %>"></span>
          <%= import_log.etat.humanize %>
        </td>
        <td><%= import_log.nbr_lignes %></td>
        <td><%= import_log.lignes_importees %></td>
        <td><%= import_log.message %></td>
        <td><%= link_to "Télécharger", download_imported_file_import_log_path(import_log) %></td>
        <td>
          <%= link_to import_log, class:"btn btn-default" do %>
            <i class="glyphicon glyphicon-zoom-in"></i>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
