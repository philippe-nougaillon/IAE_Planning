<div class="page-header">
  <%= link_to new_etudiant_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Etudiant
  <% end %>
  <h1>
    <span class="glyphicon glyphicon-education"></span>
    Liste des étudiants
  </h1>
</div>

<div class='container-fluid'>
    <%= form_tag request.path, method: :get do %>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <%= label_tag :nom, "Nom" %>    
            <%= text_field_tag :nom, params[:nom], include_blank:true, onchange:'this.form.submit()', class:"form-control" %>
          </div>

          <div class="col-sm-5">
            <%= label_tag "Formation" %>    
            <div class="input-group">
              <%= select_tag :formation_id, 
                    options_from_collection_for_select(Formation.all, :id, :nom, params[:formation_id]), 
                      class:"form-control", include_blank:true, onchange:'this.form.submit()' %>
                <span class="input-group-btn">
                <%= submit_tag 'Filtrer', class:"btn btn-success" %>
              </span>
             </div> 
          </div>
          
        </div>
      </div>  
    <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Formation</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @etudiants) do |etudiant| %>
        <td><b><%= link_to etudiant.nom, etudiant %></b></td>
        <td><%= etudiant.prénom %></td>
        <td><%= etudiant.email %></td>
        <td><%= etudiant.mobile %></td>
        <td><%= link_to etudiant.formation.nom, etudiant.formation %></td>
        <td>
          <%= link_to edit_etudiant_path(etudiant), class:"btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
  <div class="page_info">
      <%= page_entries_info @etudiants %>
  </div>
  <%= will_paginate @etudiants, renderer: BootstrapPagination::Rails %>
</div>
