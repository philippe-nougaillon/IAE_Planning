<script>
  $(document).ready(function() { $(".select2").select2({theme: "bootstrap"}); });
</script>

<%= form_for(@etudiant, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @etudiant.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@etudiant.errors.count, "error") %> prohibited this etudiant from being saved:</h4>

      <ul>
      <% @etudiant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nom, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :nom, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prénom, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :prénom, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mobile, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :mobile, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :formation, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.collection_select(:formation_id, Formation.all, :id, :nom, {include_blank: true}, class:"form-control select2") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
