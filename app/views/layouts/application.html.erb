<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="description" content="">
  <meta name="author" content="">
  <title>IAE-Planning v0.1</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<!--   <link href="http://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
 -->
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Planning", "#", class: "navbar-brand" %>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="<%= (params[:controller]=='cours' ? 'active' : '') %>">
            	<%= link_to "Cours", cours_path %>
            </li>
            <% if current_user.try(:admin?) %>
              <li class="<%= (params[:controller]=='formations' ? 'active' : '') %>">
                <%= link_to "Formations", formations_path %>
              </li>
              <li class="<%= (params[:controller]=='intervenants' ? 'active' : '') %>">
                <%= link_to "Intervenants", intervenants_path %>
              </li>
              <li class="<%= (params[:controller]=='users' ? 'active' : '') %>">
                <%= link_to "Utilisateurs", users_path %>
              </li>
              <li class="<%= (params[:controller]=='salles' ? 'active' : '') %>">
                <%= link_to "Salles", salles_path %>
              </li>
            <% end %>
          <% end %>
        </ul>

        <div style="margin-right:50px"> 
            <ul class="nav navbar-nav navbar-right">
              <% unless user_signed_in? %>
                <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Connexion</a></li>
              <% else %>
                <%= link_to current_user.email, current_user %>
                <%= link_to  "/users/sign_out", method: :delete do %> | 
                  <span class="glyphicon glyphicon-log-out"></span> DÃ©connexion
                <% end %>
              <% end %>
            </ul>
        </div>

      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= msg %>
      <% end %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
