<script>
  $(document).ready(function() { $(".select2").select2({theme: "bootstrap"}); });
</script>

<div class="page-header">
  <h1>
  	<span class="glyphicon glyphicon-calendar"></span>
  	Réservation de créneaux horaires pour toute une saison 
  </h1>
</div>

<div>
  <h3>Cette fonction permet la création de créneaux horaires réservés</h3>
</div>

<%= form_tag(request.path, method: :get) do %>
  <div class="form-group">
    <div class="row">

        <div class="col-sm-5">
            <%= label_tag :saison, "Saison" %>
            <%= select_tag :saison, 
                options_for_select(['2018/2019'], params[:saison]), include_blank:false, class:"form-control", onchange:'this.form.submit()' %>

            <%= label_tag "Formation" %>    
            <%= select_tag :formation_id, 
                options_from_collection_for_select(Formation.where(hors_catalogue:false), :id, :nom_promo_full, params[:formation_id]), class:"form-control select2", include_blank:true, onchange:'this.form.submit()' %>
            <br>
                   
            <div class="actions" style="display:none">
                <%= submit_tag "Afficher", class: "btn btn-success" %>
            </div>

        </div>
    </div>
  </div>
<% end %>

<% if @jours %>
  <div class="row">
      <div class="col-sm-5">
          <%= form_tag({action: "nouvelle_saison_create", method: :post}) do %>

              <%= hidden_field_tag :date_debut, @date_debut %>
              <%= hidden_field_tag :date_fin, @date_fin %>
              <%= hidden_field_tag :formation_id, @formation_id %>

              <div class="field">
                  <%= label_tag :jours, nil %>:
                  <%= check_box_tag :lundi, '1', true %> Lundi 
                  <%= check_box_tag :mardi, '1', true %> Mardi 
                  <%= check_box_tag :mercredi, '1', true %> Mercredi
                  <%= check_box_tag :jeudi,  '1', true %> Jeudi
                  <%= check_box_tag :vendredi, '1', true %> Vendredi
                  <%= check_box_tag :samedi,  '1', false %> Samedi
              </div>
              <br>
              
              <table class="table table-striped table-bordered table-condensed table-hover">
                  <% @jours.each do |j| %>
                      <tr>
                          <td><%= l(j, format: :long) %></td>
                          <td><%= j.cweek %></td>
                          <td><%= check_box_tag "[semaine][#{j.cweek}]", '1', false %></td>
                      </tr>
                  <% end %>
              </table>

              <div class="actions">
                  <%= submit_tag "Lancer la création", class: "btn btn-success" %>
              </div>

          <% end %>
      </div>
  </div>
<% end %>