<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Salle</th>
        <th>Places</th>
        <th>Cours</th>
        <th>Formation</th>
        <% (@date..(@date + 6.day)).each do |d| %>
                <th><%= d.strftime('%a') %></th>
        <% end %> 
      </tr>
    </thead>
    <tfoot>
      <tr>
        <% 21.times do %><th /><% end %>
      </tr>
    </tfoot>

    <tbody>
      <% bloc = 'A' %>
      <% @salles.each do |salle| %>
        <% @cours = Cour.where(etat: Cour.etats.values_at(:confirmé, :réalisé)) %>
        <% @cours = @cours.where("salle_id = ? AND cours.debut BETWEEN DATE(?) AND DATE(?)", salle.id, @date, @date + 6.day).order(:debut) %>
        <% @formations = @cours.select(:formation_id).uniq.pluck(:formation_id) %>

        <% if bloc != salle.nom[0] %>
          <% bloc = salle.nom[0] %>
          <thead>
            <tr>
              <th /><th /><th /><th />
              <% (@date..(@date + 6.day)).each do |d| %>
                <th><%= d.strftime('%a') %></th>
              <% end %> 
            </tr>
          </thead>
        <% end %>

        <tr>
          <td><b><%= salle.nom[0..6] %></b></td>
          <td><%= salle.places %></td>
          <td><%= link_to_unless @cours.count.zero?, @cours.count, cours_path(ids:@cours.pluck(:id), view:'list', from:'occupation') %>
          </td>
          <td>
              <% @formations.each do |id| %>
                <% formation = Formation.find(id) %>
                <span style="background-color:<%= formation.color %>;padding-left: 7px;"></span>
                <span style="padding-left:5px;"></span>
                <small><%= formation.abrg %></small>
                <span style="padding-right:10px;"></span>
              <% end %>
          </td>

          <% (@date..(@date + 6.day)).each do |d| %>
            <% cours = @cours.where("cours.debut BETWEEN DATE(?) AND DATE(?)", d, d + 1.day) %>
            <td>
                <% color = cours.where("debut < ?", Time.parse(d.to_s + " 13:00")).any? ? 'red' : 'lightgreen' %>
                <span style="background-color:<%= color %>;padding-left: 15px;"></span>

                <% color = cours.where("debut >= ? AND debut <= ?", Time.parse(d.to_s + " 13:00"), Time.parse(d.to_s + " 18:00")).any? ? 'red' : 'lightgreen' %>
                <span style="background-color:<%= color %>;padding-left: 15px;"></span>

                <% color = cours.where("debut >= ?", Time.parse(d.to_s + " 18:00")).any? ? 'red' : 'lightgreen' %>
                <span style="background-color:<%= color %>;padding-left: 15px;"></span>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
