<%= bootstrap_form_for(@intervenant) do |f| %>
  <% if @intervenant.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3><%= t('activerecord.errors.template.header',
                  model: Intervenant.model_name.human, count: @intervenant.errors.count) %></h3>
      <ul>
      <% @intervenant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-5">
      <%= f.text_field :nom %>
      <%= f.text_field :prenom, label:"Prénom" %>
      <%= f.text_field :email %>
      <%= f.text_field :titre1, label:"Titre" %>
      <%= f.text_field :bureau %>
      <%= f.text_field :linkedin_url, label:"Profil LinkedIn", placeholder:'URL du profil public' %>

      <% if current_user.admin? %>
        <%= f.check_box :doublon, label:"Autoriser les doublons(groupe et non individu) sur le même créneau horaire ?" %>
      <% end %>
      <br>
    </div>

    <div class="col-sm-1">
    </div>

    <div class="col-sm-5">
      <div class="col-sm-6">
        <%= f.select :status, Intervenant.statuses.keys.to_a, {include_blank: true} %>
      </div>

      <div class="col-sm-6">
        <%= f.number_field :nbr_heures_statutaire %>
      </div>

      <div class="col-sm-6">
        <%= f.date_field :date_naissance %>
      </div>

      <div class="col-sm-6">
        <%= f.date_field :remise_dossier_srh, label:"Date remise dossier SRH" %>
      </div>

      <%= f.text_field :adresse %>

      <div class="col-sm-3">
        <%= f.text_field :cp %>
      </div> 
      <div class="col-sm-9">
        <%= f.text_field :ville %>
      </div>
    
      <div class="col-sm-6">
        <%= f.text_field :téléphone_fixe %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :téléphone_mobile %>
      </div>
      <!---
      <%= f.file_field :photo %>
      -->
    </div>   
  </div>

  <div class="page-header"> 
    <h4>Responsabilités</h4>
  </div> 
  <ul>
    <%= f.fields_for :responsabilites do |r| %>
      <div class="row">
        <li>
          <div class="col-sm-2">
            <%= r.date_field :debut %>
          </div>

          <div class="col-sm-2">
            <%= r.date_field :fin %>
          </div>

          <div class="col-sm-2">
            <%= r.text_field :titre, placeholder:"Donnez un titre (ex: Chargé de mission)", label:"Titre" %>
          </div>
          <div class="col-sm-3">
            <%= r.collection_select :formation_id, Formation.where(hors_catalogue: false), :id, :nom, {include_blank: true, label: "Formation"} %>
          </div>  
  
          <div class="col-sm-1">
            <%= r.text_field :heures, label:"Heures" %>
          </div>
          <div class="col-sm-2">
            <br>
            <%= r.check_box :_destroy, label:"Supprimer ?" %>
          </div>
        </li> 
      </div>
    <% end %>
  </ul>

  <%= f.submit class: "btn btn-primary" %>

<% end %>


