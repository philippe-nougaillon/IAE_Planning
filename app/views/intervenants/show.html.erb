<div class="page-header">
  <% if current_user.admin? %>
    <%= link_to intervenants_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Retour
    <% end %>
    <%= link_to edit_intervenant_path(@intervenant), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Modifier
    <% end %>
  <% end %>
  <br><br>  
</div>

<p>
  <%= image_tag( @intervenant.linkedin_photo, class: "img-circle", size:'150x150') %>
</p>

<h2>
  <%= @intervenant.nom_prenom %> 
</h2>
<br>

<p>
  <strong>Courriel</strong><br>
  <%= mail_to @intervenant.email %>
</p>

<p>
  <strong>Profil LinkedIn</strong><br>
  <%= link_to_if @intervenant.linkedin_url, @intervenant.linkedin_url, @intervenant.linkedin_url, target:'_blank' %>
</p>

<p>
  <strong>Cours planifiés</strong><br>  
  <%= link_to "#{@intervenant.total_cours}", cours_path(intervenant_id:@intervenant) %>
</p>

<p>
  <strong>Heures planifiées</strong><br>
  <%= @intervenant.total_heures_de_cours %> h
</p>

