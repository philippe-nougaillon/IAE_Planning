<h1>Liste des Intervenants</h1>
<div class='container'>
  <div class='row'>

    <%= form_tag request.path, method: :get do %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-5">
            <%= label_tag "Nom" %>    
            <div class="input-group">
            <%= text_field_tag :nom, params[:nom], include_blank:true, onchange:'this.form.submit()', class:"form-control" %>
              <span class="input-group-btn">
                <%= submit_tag 'Rechercher', class:"btn btn-primary" %>
                <%= link_to 'Ajouter', new_formation_path, class:"btn btn-success" %>
              </span>
            </div>
          </div>
        </div>
      </div>  
    <% end %>
  </div>
  <div class='row'>
    <br>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>PrÃ©nom</th>
        <th>Cours</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @intervenants.each do |intervenant| %>
        <tr>
          <td><%= intervenant.nom %></td>
          <td><%= intervenant.prenom %></td>
          <td><%= link_to intervenant.cours.count, cours_path(intervenant_id:intervenant) %></td>
          <td>
            <%= link_to edit_intervenant_path(intervenant), class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
            <%= link_to(intervenant, method: :delete, data:{confirm: 'Confirmez-vous ?'}, class: "btn btn-default") do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
